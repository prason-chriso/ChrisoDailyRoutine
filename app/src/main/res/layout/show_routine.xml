<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your day"
        android:paddingBottom="12px"
        android:textAlignment="center"
        android:textSize="22pt"
        android:textColor="#900"
        android:id="@+id/data"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/data"
        android:gravity="center_horizontal"
        android:weightSum="7"
        android:layout_marginBottom="30px">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sun"
            android:layout_marginBottom="5px"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="14dp"
            android:id="@+id/sun"
            android:layout_below="@+id/data"
            android:background="#487bba"

            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="5px"

            android:background="#487bba"

            android:id="@+id/mon"
            android:layout_below="@+id/sun"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tue"
            android:textAlignment="center"
            android:layout_below="@id/mon"
            android:textSize="14dp"
            android:id="@+id/tue"
            android:layout_marginBottom="5px"

            android:background="#487bba"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginBottom="5px"

            android:layout_height="wrap_content"
            android:text="wed"
            android:layout_below="@+id/tue"
            android:id="@+id/wed"
            android:background="#487bba"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginBottom="5px"

            android:layout_height="wrap_content"
            android:text="thu"
            android:layout_below="@+id/wed"
            android:textAlignment="center"
            android:textSize="14dp"
            android:layout_weight="1"
            android:background="#487bba"
            android:id="@+id/thu"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"

            android:text="fri"
            android:layout_weight="1"
            android:layout_below="@id/thu"
            android:textAlignment="center"
            android:id="@+id/fri"
            android:background="#487bba"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sat"
            android:layout_weight="1"
            android:layout_below="@+id/fri"
            android:id="@+id/sat"
            android:textColor="#f00"
            android:textAlignment="center"
            android:textSize="14dp"
            android:background="#879fc6"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>